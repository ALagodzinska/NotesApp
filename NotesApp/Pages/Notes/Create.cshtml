@*@model NotesApp.Pages.Notes.CreateModel*@

@{
    ViewData["Title"] = "Create Note";
}

<h1>Create new note</h1>

<form>
    <div class="mb-3">
        <label for="note-title-input" class="form-label">Note Title:</label>
        <input type="text" class="form-control" id="note-title-input" placeholder="New note...">
    </div>

    <div class="mb-3">
    <label>Choose Note Type:</label>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="type" id="type-text-radio" value="TextNote">
        <label class="form-check-label" for="type-text-radio">
            Text Note
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="type" id="type-todo-radio" value="ToDoList">
            <label class="form-check-label" for="type-todo-radio">
            ToDo List
        </label>
    </div>
    </div>

    <div class="mb-3">
    <label>Note Color:</label>
    <select class="form-select" aria-label="Note Color:" name="color" id="note-colors-select">
        <option selected disabled>Select color from menu...</option>
        @foreach (var name in Enum.GetValues(typeof(Models.Color)))
        {
            <option value="@name">@name</option>
        }
    </select>
    </div>
    
</form>

<script src="~/js/createNote.js"></script>

